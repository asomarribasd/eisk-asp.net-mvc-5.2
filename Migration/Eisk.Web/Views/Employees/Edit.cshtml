<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/eisk-required-if-validation.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.18.custom.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $(".datepicker").datepicker({
            changeMonth: true,
            changeYear: true,
            showOn: "focus",
            showAnim: 'slideDown'
        });
    });
</script>
<script type="text/javascript">

    $("#anim").change(function () {
        $("#datepicker").datepicker("option", "showAnim", $(this).val());
    });

</script>
<style type="text/css">
    .bs-example {
        margin: 20px;
    }
</style>

@model Eisk.Models.EmployeeEditorModel
@{
    ViewBag.Title = Model.PageTitle;
}

@using (Html.BeginForm(Model.EditorAction, "Employees", FormMethod.Post,
                                       new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{

    @Html.ValidationSummary(true)
    <h1 class="h1">
        @Model.PageTitle
    </h1>
    <p class="bs-example">
        Add details of the employee.
    </p>
    @Html.HiddenFor(model => model.Id)
    <div class="bs-example">
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="First Name">
                </div>
            </div>
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Last Name">
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Title">
                </div>
            </div>
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Title of Courtesy">
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <select class="form-control" placeholder="Supervisor">
                        <option>Supervisor 1</option>
                        <option>Supervisor 2</option>
                    </select>
                </div>
            </div>
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Hire Date">
                </div>
            </div>

        </div>
        <br>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Birth Date">
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Address">
                </div>
            </div>
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="City">
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Region">
                </div>
            </div>
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Postal Code">
                </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <select class="form-control" placeholder="Country">
                        <option>Bangladesh</option>
                        <option>Singapore</option>
                        <option>USA</option>
                    </select>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Phone">
                </div>
            </div>
            <div class="col-xs-2">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <input type="text" class="form-control" placeholder="Extension">
                </div>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon"></span></span>
                    <textarea type="text" class="form-control input-lg" placeholder="Notes"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    Picture:<br />
                    <img id="employeeImage" alt="employee image" class="profile-image" src="/Images/noimage.gif" />
                    <br /><br />
                    <input type="file" class="form-control" placeholder="Picture">
                </div>
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-xs-4">
                <div class="input-group">
                    <input type="submit" class="btn btn-primary" value="Submit">
                    @*<input type="reset" class="btn btn-default" value="Reset">*@
                    <br />
                    <div>
                        <em>Required fields are marked with *</em>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
